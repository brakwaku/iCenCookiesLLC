{
  "name": "icencookiesllc",
  "private": true,
  "version": "1.0.0",
  "description": "iCen Cookies LLC web platform for ordering cookies and managing orders",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon --ext js,graphql --ignore data/ backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Kwaku Appau-Nkansah",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-jwt": "^8.4.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.4",
    "nodemon": "^3.0.2",
    "xss-clean": "^0.1.4"
  }
}
